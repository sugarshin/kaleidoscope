@charset "utf-8"
@import "../node_modules/nib/lib/nib/*"

normalize-css()

// colors
_primaryClr = #168eea
_headingClr = #323b43
_bodyClr = #59626a
_borderClr = #ced7df
_lightBorderClr = #eff3f6
_fillClr = #f4f7f9
_errorClr = #ee4f4f
_warningClr = #fff9ea
_successClr = #76b852
_facebook = #3b5998
_twitter = #55acee
_googleplus = #dd4b39

// canvasクリック用
html, body
  height 100%

body
  background _headingClr
  color _borderClr

input[type=search],
button
  color _headingClr

// canvasクリック用
.kaleidoscope
  width 100%
  height 100%
  overflow hidden
  position relative

.control
  z-index 1
  width 61.8%
  height 100%
  position absolute
  top 0
  left 0
  box-sizing border-box
  padding 4%
  transition transform .2s ease
  transform translateX(-100%)
  background rgba(0,0,0,.5)
  &.opened
    transform translateX(0)

.controller
  margin 0 0 8%

.file-wrapper
  input
    width 100%

.search-wrapper
  input
    width 61.8%
    min-width (320 * 0.618 - 320 * 0.04 * 4)px
    margin-bottom 2%

.open-menu-button
  _size = 44px
  width _size
  height _size
  background _borderClr
  position absolute
  top 0
  right -(_size)
  a
    width _size
    height _size
    display block
    box-sizing border-box
    padding-top 11px
  div
    width 30px
    height 2px
    background _headingClr
    margin 0 auto 8px

.archive-image
  width 100%
  padding 4px
  box-sizing border-box
  position absolute
  bottom 0
  z-index 1
  text-align right

.result-file-image
  width 32px
  height 32px
  margin-left 4px
  display inline-block
  &:hover
    img
      opacity .8
  img
    width 100%
    height auto
    cursor pointer

.download
  display inline-block
  background _primaryClr
  cursor pointer
  padding 4px 8px
  vertical-align middlem
  color _borderClr
  text-decoration none
