doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    title Kaleidoscope
    meta(name="viewport" content="width=device-width,initial-scale=1")
  body
    .kaleidoscope#kaleidoscope
    .control
      .file-wrapper.controller
        input#file(type="file" accept="image/*")
      .search-wrapper.controller
        input#search(type="search" placeholder="例： apple")
        br
        button#search-instagram Instagramでさがす
      .range-wrapper.controller
        input#range(type="range" value="24" min="8" step="1" max="48")
        span#result-range

      .toggle-auto-wrapper.controller
        button#toggle-auto(data-auto="false") On auto play

      .download-wrapper.controller
        a.download#download(download="kaleidoscope.png" target="_blank") 画像をダウンロード
      .open-menu-button#open-menu-button
        a(href="#")
          div
          div
          div
    #archive-image.archive-image
    script(src="main.js")
