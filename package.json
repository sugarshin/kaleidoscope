{
  "name": "kaleidoscope",
  "version": "0.1.0",
  "description": "Kaleidoscope",
  "homepage": "https://github.com/sugarshin",
  "repository": "git@github.com:sugarshin/kaleidoscope.git",
  "author": "sugarshin",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "npm run jade && beefy ./src/coffee/main.coffee --cwd dest --live --open -- -t coffeeify -t stylify --extension='.coffee'",
    "jade": "jade src/ -o dest/",
    "browserify": "browserify -t coffeeify -t stylify --extension='.coffee' ./src/coffee/main.coffee -o ./dest/main.js",
    "replace-min": "replace 'main.js' 'main.min.js' dest/index.html",
    "uglify": "uglifyjs dest/main.js -m -c warnings=false --comments '/\\/*!/' -o dest/main.min.js",
    "build": "npm run jade && npm run browserify && npm run uglify && npm run replace-min",
    "deploy": "git subtree push --prefix=dest/ origin gh-pages --squash"
  },
  "devDependencies": {
    "beefy": "^2.1.3",
    "browserify": "^9.0.3",
    "coffeeify": "^1.0.0",
    "jade": "^1.9.2",
    "replace": "^0.3.0",
    "uglify-js": "^2.4.17"
  },
  "dependencies": {
    "bean": "^1.0.15",
    "bluebird": "^2.9.14",
    "debounce": "^1.0.0",
    "domquery": "^1.2.0",
    "insert-css": "^0.2.0",
    "jsonp-client": "^0.5.2",
    "nib": "^1.1.0",
    "object-assign": "^2.0.0",
    "shake.js": "git://github.com/sugarshin/shake.js",
    "stylify": "^1.2.0"
  }
}
